<% 
require 'faraday'
require 'faraday/net_http'
Faraday.default_adapter = :net_http
%>
<body>
		<% if flash[:notice] %>
			<div class="alert alert-success" id="flash" role="alert">
				<%= notice %>
			</div>
			<script type="text/javascript">
				setTimeout(function () {

					// Closing the alert
					document.querySelector('#flash').style.display = "none";
				}, 2500);
			</script>
			<% end %>
				<% if flash[:alert] %>
					<div class="alert alert-danger" id="flash" role="alert">
						<%= alert %>
					</div>
					<script type="text/javascript">
						setTimeout(function () {
							// Closing the alert
							document.querySelector('#flash').style.display = "none";
						}, 2500);
					</script>
					<% end %>
						<%= yield %>
							<script src="http://bmk.clovery.si/dest/js/jquery.js"></script>
							<script src="http://bmk.clovery.si/dest/js/plugins.js"></script>
							<script src="http://bmk.clovery.si/dest/js/plugins2.js"></script>
							<script src="http://bmk.clovery.si/dest/js/custom.js"></script>
</body>

