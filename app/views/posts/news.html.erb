<div class="page-single movie_list">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-10 col-sm-10 col-xs-10">
                <div class="topbar-filter">
                </div>
                <%= form_with url: "/news", method: :get do |form| %>
                    <%= form.label :query, "Search for:", style: "color: lightgrey;" %>
                    <%= form.text_field :query , pattern: "[A-Za-z- -]{1,25}" %><br />
                    <%= form.submit "Search", id:"search", style: "background-color: #dd003f; color: white; padding: 10px; border-radius: 4px; border: none; width: 10%; " %>
                  <% end %>
                <br />
                  <% if params[:commit] == "Search" %>
                <!--LOOP START HERE-->
                <% responses = Faraday.get("https://api.themoviedb.org/3/search/movie?api_key=e766900bdc5dd5e8399627d7ec66594f&language=en-US&query=#{params[:query]}&page=1&include_adult=false") %>
                <% search = JSON.parse(responses.body) %>
                <% if search['results'] == [] %>
                <br />
                  <h1 style = "color:lightgrey;"> No results found </h1>
                <% else %>
                <% s = 0; %>
                <% if search['total_results'] < 6 %>
                    <h1 style="color:white;"> Not enough results </h1>
                <% else %>
                <% while s <= 5 do %>
                <div class="movie-item-style-2">
                  <% if search['results'][s]['poster_path'] == [] %>
                    <p> nema posterja </p>
                  <% else %>
                    <%= image_tag("https://image.tmdb.org/t/p/original/#{search['results'][s]['poster_path']}", style: "max-width:170px; min-width:170px;  max-height:250px; min-height:250px;") %>
                  <% end %>
                    <div class="mv-item-infor">
                        <h6><%= link_to search['results'][s]['title'], more_url(:post_id=>search['results'][s]['id']) %>  <span>(<%= search['results'][s]['release_date'] %>)</span></h6>
                        <p class="rate"><i class="ion-android-star"></i><span><%= search['results'][s]['vote_average'] %></span> /10</p>
                        <p class="describe"><%= search['results'][s]['overview']%></p>
                    </div>
                </div>
                <!--LOOP END HERE-->
                <% s=s+1; %>
                <% end %>
                <% end %>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
 
<script src="js/jquery.js"></script>
