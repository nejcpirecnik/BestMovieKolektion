<%= render "layouts/navbar" %>
<div class="slider sliderv2">
	<div class="container">
		<div class="row">
			<div class="slider-single-item">
			<% responsed = Faraday.get('https://api.themoviedb.org/3/movie/popular?api_key=e766900bdc5dd5e8399627d7ec66594f&language=en-US&page=1') %>
			<% popular = JSON.parse(responsed.body) %>
				<!--START-->
				<% a=0; %>																
				<%=	while a < 5 do %>
				<div class="movie-item">
					<div class="row">
						<div class="col-md-8 col-sm-12 col-xs-12">
							<div class="title-in">
								<div class="cate">
									<!-- <span class="blue"><a href="#">Sci-fi</a></span>
									<span class="yell"><a href="#">Action</a></span>
									<span class="orange"><a href="#">advanture</a></span> -->
								</div>
								<h1><a href="#"><%= popular['results'][a]['original_title'] %><br>
									 <span><%= popular['results'][a]['release_date'] %></span></a></h1>
								<div class="social-btn">
									<% responset = Faraday.get("https://api.themoviedb.org/3/movie/#{popular['results'][a]['id']}/videos?api_key=e766900bdc5dd5e8399627d7ec66594f&language=en-US") %>
									<% trailer = JSON.parse(responset.body) %>
									<% t=0; %>
									<%= while trailer['results'][t]['type'] != 'Trailer' do %>
									<% t=t+1 %>
									<% end %>
									<i class="ion-play"></i><%= link_to "Watch Trailer", "https://www.youtube.com/watch?v=#{trailer['results'][t]['key']}",class: "parent-btn" %>
									<a href="#" class="parent-btn"><i class="ion-heart"></i> Add to Favorite</a>
									<div class="hover-bnt">
										<a href="#" class="parent-btn"><i class="ion-android-share-alt"></i>share</a>
										<div class="hvr-item">
											<a href="#" class="hvr-grow"><i class="ion-social-facebook"></i></a>
											<a href="#" class="hvr-grow"><i class="ion-social-twitter"></i></a>
											<a href="#" class="hvr-grow"><i class="ion-social-googleplus"></i></a>
											<a href="#" class="hvr-grow"><i class="ion-social-youtube"></i></a>
										</div>
									</div>
								</div>
								<div class="mv-details">
									<p><i class="ion-android-star"></i><span>7.4</span> /10</p>
									<ul class="mv-infor">
										<li> original language: <%= popular['results'][a]['original_language'] %></li>
										<li> Rated:  <%= popular['results'][a]['vote_average'] %> </li>
										<li> Release: <%= popular['results'][a]['release_date'] %></li>
									</ul>
								</div>
								<div class="btn-transform transform-vertical">
									<div><a href="#" class="item item-1 redbtn">more detail</a></div>
									<div><a href="#" class="item item-2 redbtn hvrbtn">more detail</a></div>
								</div>

							</div>
						</div>
						<div class="col-md-4 col-sm-12 col-xs-12">
							<div class="mv-img-2">
								<a href="#"><%= image_tag("https://image.tmdb.org/t/p/original/#{popular['results'][a]['poster_path']}") %></a>
							</div>
						</div>
					</div>
				</div>
				<% a= a + 1; %>
				<% end %>
				<!--END-->
			</div>
		</div>
	</div>
</div>
<div class="page-single">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="topbar-filter fw">
					<p>Found <span>1,608 movies</span> in total</p>
					<label>Sort by:</label>
					<select>
						<option value="popularity">Popularity Descending</option>
						<option value="popularity">Popularity Ascending</option>
						<option value="rating">Rating Descending</option>
						<option value="rating">Rating Ascending</option>
						<option value="date">Release date Descending</option>
						<option value="date">Release date Ascending</option>
					</select>
				</div>
				<div class="flex-wrap-movielist mv-grid-fw">
					<% @posts.each do |post| %>
						<div class="movie-item-style-2 movie-item-style-1">
							<img src="http://bmk.clovery.si/dest/images/uploads/thumbnail.png" alt="">
							<div class="hvr-inner">
								<%= link_to 'Read More' , post %><i class="ion-android-arrow-dropright"></i> </a>
							</div>
							<div class="mv-item-infor">
								<h6><a href="#">
								<%= post.title %>
									</a></h6>
								<p class="rate"><i class="ion-android-star"></i><span>8.1</span> /10</p>
							</div>
						</div>
						<% end %>
						<% response = Faraday.get('https://api.themoviedb.org/3/movie/upcoming?api_key=e766900bdc5dd5e8399627d7ec66594f&language=en-US&page=1') %>
						<% data = JSON.parse(response.body) %>
						<% i=0; %>																
						<%=	while i < 20 do %>
						<div class="movie-item-style-2 movie-item-style-1">
						<%= image_tag("https://image.tmdb.org/t/p/original/#{data['results'][i]['poster_path']}") %>
						<div class="hvr-inner">
						</div>
						<div class="mv-item-infor">
							<h6><a href="#">
										<%= data['results'][i]['original_title'] %>
								</a></h6>
							<p class="rate"><i class="ion-android-star"></i><span><%= data['results'][i]['vote_average'] %></span> /10</p>
						</div>
					</div>
					<% i = i + 1; %>
					<% end %>
				</div>
				<div class="topbar-filter">
					<label>Movies per page: 18 </label>
					<div class="pagination2">
						<% if(@page * 18 > 18) %>
							<%= link_to "previous page" , posts_path(page: @page - 1) %>
								<% end %>
									<% if(@page * 18 == 18) %>
										<%= link_to "previous page" , posts_path(page: @page - 1) %>
											|
											<%= link_to "Next page" , posts_path(page: @page + 1) %>
												<% end %>
													<% if(@page * 18 < 18) %>
														<%= link_to "Next page" , posts_path(page: @page + 1) %>
															<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
